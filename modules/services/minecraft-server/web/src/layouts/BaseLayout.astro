---
import "@styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
    </head>
    <body>
        <a href="/" class="title">The Low-Power SMP</a>
        <p>The server that tries it's best!</p>
        <slot />
    </body>
</html>
